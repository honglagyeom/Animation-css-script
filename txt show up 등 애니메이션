[JS]

$(function(){
            brandAnimation01();
            
            // 스크롤 애니메이션 
            $('.tab.md > li').each(function(){
                $(this).find('a').one('click',function() {
                    var idx = $(this).parent('li').index(),
                        cont = $('.tab_cont').children('.cont');
                    if(idx == 0 && cont.eq(0).hasClass('active')){
                        activeDel();
                        brandAnimation01();
                    }else if(idx == 1 && cont.eq(1).hasClass('active')){
                        activeDel();
                        brandAnimation02();
                    }else if(idx == 2 && cont.eq(2).hasClass('active')){
                        activeDel();
                        brandAnimation03();
                    }else if(idx == 3 && cont.eq(3).hasClass('active')){
                        activeDel();
                        brandAnimation04();
                    }else{
                        return;
                    }
                })
                
                //탭 클릭시 반응형 슬라이더 
                $(this).find('a').on('click',function() {
                    var idx = $(this).parent('li').index(),
                        cont = $('.tab_cont').children('.cont');
                    if(idx == 1 && cont.eq(1).hasClass('active')){
                        slick_on_mobile(reviewSlider, settings_slider);
                        slick_on_mobile(stepSlider01, settings_slider);
                    }else if(idx == 2 && cont.eq(2).hasClass('active')){
                        slick_on_mobile(imgSlider, settings_slider);
                        slick_on_mobile(stepSlider02, settings_slider);
                    }else if(idx == 3 && cont.eq(3).hasClass('active')){
                        slick_on_mobile(stepSlider03, settings_slider);
                    }else{
                        return;
                    }
                })
            })
            
})

        function activeDel(){
            var contShow = $('.brand_story.days100 .txt_show'),
                contGraph = $('.brand_story.days100 .guide.reading .area.bar_graph');
            contShow.removeClass('active');
            contGraph.removeClass('active');
        }
        function brandAnimation01(){
            $(window).on('load resize scroll',function(){
                var header = $('#gnb').outerHeight();
                var sct = $(window).scrollTop() + header,
                    winH = ($(window).height() - header) / 2;

                //100일 독서란?
                var mainTxt = $('.brand_story.days100 .main_guide > .top .info_area > .txt_area'),
                    mainTop = $('.brand_story.days100 .main_guide > .top .info_area').offset().top;
                var preUser = $('.brand_story.days100 .main_guide > .detail_info_area .sec .contents .pre_user'),
                    offTopUser00 = preUser.eq(0).offset().top,
                    offTopUser01 = preUser.eq(1).offset().top,
                    offTopUser02 = preUser.eq(2).offset().top;
                var power = $('.brand_story.days100 .main_guide > .detail_info_area .sec .power_area dd'),
                    offTopPower = power.offset().top;

                $('.brand_story.days100 .main_guide > .top .tit_area').addClass('active');
                if(sct > mainTop - winH){
                    mainTxt.addClass('active');
                }
                if(sct > offTopUser00 - winH){
                    preUser.eq(0).addClass('active');
                }
                if(sct > offTopUser01 - winH){
                    preUser.eq(1).addClass('active');
                }
                if(sct > offTopUser02 - winH){
                    preUser.eq(2).addClass('active');
                }
                if(sct > offTopPower - winH){
                    power.addClass('active');
                }
            })
        }
        function brandAnimation02() {
            $(window).on('load resize scroll', function () {
                var header = $('#gnb').outerHeight();
                var sct = $(window).scrollTop() + header,
                    winH = ($(window).height() - header) / 2;

                //독서성장일기
                var char01 = $('.brand_story.days100 .guide.diary .area.char .cont_area');
                var guide = $('.brand_story.days100 .guide.diary .area.guide'),
                    guideTop = guide.offset().top;
                var review = $('.brand_story.days100 .guide.diary .area.change .cont_area'),
                    reviewTop = review.offset().top;
                var end = $('.brand_story.days100 .guide.diary .end'),
                    endTop = end.offset().top;

                if (sct > header) {
                    char01.addClass('active');
                }
                if (sct > reviewTop - winH) {
                    review.find('.txt_show').addClass('active');
                }
                if (sct > guideTop - winH) {
                    guide.find('.txt_show').addClass('active');
                }
                if (sct > endTop - winH - 200) {
                    end.addClass('active');
                }
            })
        }
        function brandAnimation03() {
            $(window).on('load resize scroll', function () {
                var header = $('#gnb').outerHeight();
                var sct = $(window).scrollTop() + header,
                    winH = ($(window).height() - header) / 2;

                //독전/독후활동
                var char02 = $('.brand_story.days100 .guide.reading .area.char .cont_area');
                var graph = $('.brand_story.days100 .guide.reading .area.bar_graph'),
                    graphTop = graph.offset().top;
                var guide = $('.brand_story.days100 .guide.reading .area.guide'),
                    guideTop = guide.offset().top;
                var end = $('.brand_story.days100 .guide.reading .end'),
                    endTop = end.offset().top;

                if (sct > header) {
                    char02.addClass('active');
                }
                if (sct > graphTop - winH) {
                    graph.addClass('active');
                }
                if (sct > guideTop - winH) {
                    guide.find('.txt_show').addClass('active');
                }
                if (sct > endTop - winH - 200) {
                    end.addClass('active');
                }
            })
        }
        function brandAnimation04(){
            $(window).on('load resize scroll',function(){
                var header = $('#gnb').outerHeight();
                var sct = $(window).scrollTop() + header,
                    winH = ($(window).height() - header) / 2;

                //그물독서활동
                var char03 = $('.brand_story.days100 .guide.chain .area.char .cont_area');
                var circle = $('.brand_story.days100 .guide.chain .area.circle'),
                    circleTop = circle.offset().top;
                var guide =  $('.brand_story.days100 .guide.chain .area.guide'),
                    guideTop = guide.offset().top;
                var end = $('.brand_story.days100 .guide.chain .end'),
                    endTop = end.offset().top;

                if(sct > header){
                    char03.addClass('active');
                }
                if(sct > circleTop - winH){
                    circle.find('.txt_show').addClass('active');
                }
                if(sct > guideTop - winH){
                    guide.find('.txt_show').addClass('active');
                }
                if (sct > endTop - winH - 200) {
                    end.addClass('active');
                }
            })
        }
